{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext"],
    "types": ["node"],
    "plugins": [],
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
